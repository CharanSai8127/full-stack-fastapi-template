{
  "id": null,
  "uid": "gateway-dashboard",
  "title": "Gateway API / NGINX Gateway Overview",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Requests /s (all routes)",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate({__name__=~\"nginx_ingress_controller_requests_total|nginx_ingress_controller_requests|nginx_ingress_controller_request_total\", namespace=\"prod\"}[5m]))",
          "legendFormat": "req/s"
        }
      ]
    },
    {
      "type": "stat",
      "title": "5xx Rate /s",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate({__name__=~\"nginx_ingress_controller_requests_total|nginx_ingress_controller_requests|nginx_ingress_controller_request_total\", namespace=\"prod\", status=~\"5..\"}[5m]))",
          "legendFormat": "5xx/s"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Latency P50 / P90 / P99",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate({__name__=~\"nginx_ingress_controller_request_duration_seconds_bucket|nginx_ingress_controller_request_duration_seconds_bucket_total|nginx_ingress_controller_request_duration_seconds_bucket_seconds\", namespace=\"prod\"}[5m])) by (le))",
          "legendFormat": "P50"
        },
        {
          "expr": "histogram_quantile(0.90, sum(rate({__name__=~\"nginx_ingress_controller_request_duration_seconds_bucket|nginx_ingress_controller_request_duration_seconds_bucket_total|nginx_ingress_controller_request_duration_seconds_bucket_seconds\", namespace=\"prod\"}[5m])) by (le))",
          "legendFormat": "P90"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate({__name__=~\"nginx_ingress_controller_request_duration_seconds_bucket|nginx_ingress_controller_request_duration_seconds_bucket_total|nginx_ingress_controller_request_duration_seconds_bucket_seconds\", namespace=\"prod\"}[5m])) by (le))",
          "legendFormat": "P99"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Request Rate by Route (top 10)",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "topk(10, sum by (ingress, service, route) (rate({__name__=~\"nginx_ingress_controller_requests_total|nginx_ingress_controller_requests\", namespace=\"prod\"}[5m])))",
          "legendFormat": "{{ingress}}/{{service}}/{{route}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Upstream Errors /s",
      "gridPos": { "x": 0, "y": 20, "w": 6, "h": 6 },
      "targets": [
        {
          "expr": "sum(rate({__name__=~\"nginx_ingress_controller_upstream_requests|nginx_ingress_controller_upstream_retries_total|nginx_ingress_controller_upstream_errors_total\", namespace=\"prod\"}[5m]))",
          "legendFormat": "upstream errors/s"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Active Routes",
      "gridPos": { "x": 6, "y": 20, "w": 6, "h": 6 },
      "targets": [
        {
          "expr": "count(count by (ingress)({__name__=~\"nginx_ingress_controller_requests_total|nginx_ingress_controller_requests\", namespace=\"prod\"}))",
          "legendFormat": "routes"
        }
      ]
    }
  ]
}

