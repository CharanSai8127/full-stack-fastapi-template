{
  "id": null,
  "uid": "postgres-dashboard",
  "title": "PostgreSQL Overview",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Active Connections",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "pg_stat_activity_count{namespace=\"prod\"}",
          "legendFormat": "connections"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Cache Hit Ratio",
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "pg_stat_database_blks_hit{namespace=\"prod\"} / (pg_stat_database_blks_hit{namespace=\"prod\"} + pg_stat_database_blks_read{namespace=\"prod\"})",
          "legendFormat": "ratio"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Deadlocks /s",
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 },
      "targets": [
        {
          "expr": "rate(pg_stat_database_deadlocks{namespace=\"prod\"}[5m])",
          "legendFormat": "deadlocks"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Slow Transactions",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "pg_stat_activity_max_tx_duration_seconds{namespace=\"prod\"}",
          "legendFormat": "seconds"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Tuples Returned vs Fetched",
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(pg_stat_database_tup_returned{namespace=\"prod\"}[5m])",
          "legendFormat": "returned"
        },
        {
          "expr": "rate(pg_stat_database_tup_fetched{namespace=\"prod\"}[5m])",
          "legendFormat": "fetched"
        }
      ]
    }
  ]
}

