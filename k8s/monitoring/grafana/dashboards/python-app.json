{
  "id": null,
  "uid": "python-app-dashboard",
  "title": "Python Application Overview",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Requests /s",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "rate(http_requests_total{namespace=\"prod\"}[5m])",
          "legendFormat": "req/s"
        }
      ]
    },
    {
      "type": "stat",
      "title": "5xx Error Rate",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "rate(http_requests_total{namespace=\"prod\",status=~\"5..\"}[5m])",
          "legendFormat": "errors/s"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Latency (P50 / P90 / P99)",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50,sum(rate(http_request_duration_seconds_bucket{namespace=\"prod\"}[5m])) by (le))",
          "legendFormat": "P50"
        },
        {
          "expr": "histogram_quantile(0.90,sum(rate(http_request_duration_seconds_bucket{namespace=\"prod\"}[5m])) by (le))",
          "legendFormat": "P90"
        },
        {
          "expr": "histogram_quantile(0.99,sum(rate(http_request_duration_seconds_bucket{namespace=\"prod\"}[5m])) by (le))",
          "legendFormat": "P99"
        }
      ]
    },
    {
      "type": "graph",
      "title": "CPU Usage (pods)",
      "gridPos": { "x": 0, "y": 12, "w": 6, "h": 6 },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{namespace=\"prod\",pod=~\"backend.*\"}[5m])",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Memory Usage (pods)",
      "gridPos": { "x": 6, "y": 12, "w": 6, "h": 6 },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{namespace=\"prod\",pod=~\"backend.*\"}",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Ready Pods",
      "gridPos": { "x": 0, "y": 18, "w": 12, "h": 4 },
      "targets": [
        {
          "expr": "count(kube_pod_status_ready{namespace=\"prod\",condition=\"true\",pod=~\"backend.*\"})",
          "legendFormat": "pods"
        }
      ]
    }
  ]
}

